{
    "variables": {
        "aws-profile": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "profile": "{{ user `aws-profile` }}",
            "region": "us-west-2",
            "source_ami": "ami-0d1cd67c26f5fca19",
            "instance_type": "t2.large",
            "ssh_username": "ubuntu",
            "ami_name": "data-server-{{timestamp}}",
            "tags": {
                "Name": "Data Server"
            }
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./scripts",
            "destination": "/home/ubuntu/"
        },
        {
            "type": "shell",
            "inline": [
                "ls -la /home/ubuntu",
                "cd scripts",
                "sudo chmod +x *.sh",
                "sudo ./install_elasticsearch.sh",
                "sudo ./install_redis.sh"
            ]
        },
        {
            "type": "shell",
            "script": "./completed.sh"
        }
    ]
}
